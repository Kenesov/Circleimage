<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/_img_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elon Mask"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/layout_1"
            app:layout_constraintStart_toStartOf="@id/layout_1"
            app:layout_constraintTop_toBottomOf="@id/_img_1"
            app:layout_constraintBottom_toTopOf="@id/text_2"
            app:layout_constraintVertical_bias="1" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI/UX Designer | Pront end Developer"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@id/layout_1"
            app:layout_constraintStart_toStartOf="@id/layout_1"
            app:layout_constraintTop_toBottomOf="@id/text_1"
            app:layout_constraintBottom_toBottomOf="@id/text_3" />


        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vashintong, Amircan"
            android:textColor="@color/white"
            android:textSize="16dp"
           app:layout_constraintEnd_toEndOf="@id/layout_1"
            app:layout_constraintStart_toStartOf="@id/layout_1"
            app:layout_constraintTop_toBottomOf="@id/text_2"
            app:layout_constraintBottom_toBottomOf="@id/layout_1"
            android:layout_marginBottom="10dp"
            app:layout_constraintVertical_bias="0"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toStartOf="@+id/text_3"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/layout_1"
            app:layout_constraintTop_toBottomOf="@id/text_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/carddd_1"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       app:layout_constraintTop_toBottomOf="@id/layout_1"
       app:layout_constraintBottom_toTopOf="@id/layout"
       app:layout_constraintStart_toEndOf="@id/layout"
       app:layout_constraintEnd_toStartOf="@id/layout_1"
      />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay"
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#EDEFF1"
        >

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/lay"
            app:layout_constraintBottom_toBottomOf="@id/lay"
            android:text="2332"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_2"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:textSize="40dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/txt_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_3"
            android:text="732"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/txt_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="332"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tt_2"
            android:text="Appriciation"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/tt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_2"
            app:layout_constraintStart_toEndOf="@id/tt_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tt_3"
            android:text="Followers"
            android:textStyle="normal"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_3"
            app:layout_constraintStart_toEndOf="@id/tt_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Appriciation"
            android:textStyle="normal"
            android:textSize="16dp"
            android:layout_marginStart="4dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/lay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0">


    </androidx.constraintlayout.widget.ConstraintLayout>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/can_lay"
         android:layout_width="match_parent"
         android:layout_height="250dp"
         app:layout_constraintTop_toBottomOf="@id/lay"
         app:layout_constraintBottom_toBottomOf="parent"
         >

         
         <ImageView
             android:id="@+id/img_elon"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:src="@drawable/img_1"
             app:layout_constraintBottom_toBottomOf="@id/can_lay"
             app:layout_constraintTop_toTopOf="@id/can_lay"
             />
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="200dp"
             app:layout_constraintStart_toStartOf="@id/img_elon"
             app:layout_constraintEnd_toEndOf="@id/img_elon"
             android:layout_marginEnd="30dp"
             android:layout_marginStart="28dp"
             android:background="#6B958F8F"
             app:layout_constraintBottom_toBottomOf="@id/can_lay"
             app:layout_constraintTop_toTopOf="@id/can_lay" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="4:31"
             app:layout_constraintBottom_toBottomOf="@id/img_elon"
             app:layout_constraintTop_toTopOf="@id/img_elon"
             app:layout_constraintStart_toStartOf="@id/img_elon"
             app:layout_constraintEnd_toEndOf="@id/img_elon"
             android:textColor="@color/white"
             android:textSize="26dp"
             android:textStyle="bold"
             app:layout_constraintVertical_bias="1"
             app:layout_constraintHorizontal_bias="0.9"
             />

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="200dp"
             app:layout_constraintStart_toStartOf="@id/img_elon"
             app:layout_constraintEnd_toEndOf="@id/img_elon"
             android:layout_marginEnd="30dp"
             android:layout_marginStart="28dp"
             android:background="#6B958F8F"
             app:layout_constraintBottom_toBottomOf="@id/can_lay"
             app:layout_constraintTop_toTopOf="@id/can_lay" />

         <ImageView
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:src="@drawable/elon"
             app:layout_constraintTop_toTopOf="@id/img_elon"
             app:layout_constraintBottom_toBottomOf="@id/img_elon"
             app:layout_constraintStart_toStartOf="@id/img_elon"
             app:layout_constraintEnd_toEndOf="@id/img_elon"/>


         
         
         
     </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



